{
    "extends": "solhint:recommended",
    "plugins": [],
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": [
            "warn",
            120
        ],
        "not-rely-on-time": "off",
        "reason-string": [
            "warn",
            {
                "maxLength": 64
            }
        ],
        "no-empty-blocks": "off",
        "avoid-low-level-calls": "off",
        "no-inline-assembly": "off",
        "gas-custom-errors": "off",
        "one-contract-per-file": "off"
    }
}